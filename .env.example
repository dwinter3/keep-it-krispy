# Keep It Krispy - Environment Variables
# Copy this file to .env.local and fill in your values

# ========================================
# Google OAuth Configuration
# ========================================
# Create credentials at: https://console.cloud.google.com/apis/credentials
# Set authorized redirect URI to: https://main.dh65gpsgmkx3x.amplifyapp.com/api/auth/callback/google
GOOGLE_CLIENT_ID=
GOOGLE_CLIENT_SECRET=

# ========================================
# NextAuth Configuration
# ========================================
# Generate a secret with: openssl rand -base64 32
NEXTAUTH_URL=https://main.dh65gpsgmkx3x.amplifyapp.com
NEXTAUTH_SECRET=

# Email Allowlist (comma-separated)
# Only these emails will be allowed to sign in
ALLOWED_EMAILS=davewinter@gmail.com,dw@choruscap.ai

# ========================================
# AWS Configuration
# ========================================
AWS_ACCOUNT_ID=123456789012
AWS_REGION=us-east-1
AWS_PROFILE=your-aws-profile

# S3 Buckets
KRISP_S3_BUCKET=krisp-transcripts-YOUR_ACCOUNT_ID
VECTOR_BUCKET=krisp-vectors

# DynamoDB
DYNAMODB_TABLE=krisp-transcripts-index
COMPANIES_TABLE=krisp-companies
SPEAKERS_TABLE=krisp-speakers
USERS_TABLE=krisp-users

# Vector Search
VECTOR_INDEX=transcript-chunks

# ========================================
# Web App (Amplify)
# ========================================
S3_ACCESS_KEY_ID=AKIA...
S3_SECRET_ACCESS_KEY=your-secret-key
APP_REGION=us-east-1

# Webhook (optional)
KRISP_WEBHOOK_AUTH_KEY=your-webhook-auth-key

# Lambda URLs (for local development)
KRISP_WEBHOOK_URL=https://your-lambda-url.lambda-url.us-east-1.on.aws/
MCP_SERVER_URL=https://your-mcp-lambda-url.lambda-url.us-east-1.on.aws/mcp/

# ========================================
# Notion Integration (optional)
# ========================================
# Create an integration at: https://www.notion.so/my-integrations
# Set redirect URI to: https://main.dh65gpsgmkx3x.amplifyapp.com/api/auth/notion/callback
NOTION_CLIENT_ID=
NOTION_CLIENT_SECRET=
NOTION_REDIRECT_URI=https://main.dh65gpsgmkx3x.amplifyapp.com/api/auth/notion/callback
