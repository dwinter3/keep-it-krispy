{
  "name": "mcp-server-ts",
  "version": "1.0.0",
  "description": "Keep It Krispy MCP Server for Claude Desktop",
  "main": "dist/handler.js",
  "scripts": {
    "build": "tsc",
    "start": "node dist/handler.js",
    "dev": "tsc && node dist/handler.js",
    "bundle": "esbuild src/handler.ts --bundle --platform=node --target=node20 --outfile=dist/handler.js --external:@aws-sdk/*",
    "build:apps": "npm run build:app-meeting-dashboard && npm run build:app-transcript-viewer && npm run build:app-speaker-profile && npm run build:app-search-explorer",
    "build:app-meeting-dashboard": "cross-env INPUT=apps/meeting-dashboard/meeting-dashboard.html vite build",
    "build:app-transcript-viewer": "cross-env INPUT=apps/transcript-viewer/transcript-viewer.html vite build",
    "build:app-speaker-profile": "cross-env INPUT=apps/speaker-profile/speaker-profile.html vite build",
    "build:app-search-explorer": "cross-env INPUT=apps/search-explorer/search-explorer.html vite build",
    "build:stdio": "npm run build:apps && esbuild src/stdio-server.ts --bundle --platform=node --target=node20 --outfile=dist/stdio-server.cjs --format=cjs",
    "build:all": "npm run build:apps && npm run build:stdio",
    "stdio": "node dist/stdio-server.cjs",
    "local": "npx tsx src/local-server.ts"
  },
  "keywords": [
    "mcp",
    "krisp",
    "transcripts"
  ],
  "author": "",
  "license": "ISC",
  "type": "module",
  "dependencies": {
    "@aws-sdk/client-bedrock-runtime": "^3.967.0",
    "@aws-sdk/client-dynamodb": "^3.967.0",
    "@aws-sdk/client-s3": "^3.967.0",
    "@aws-sdk/client-s3vectors": "^3.968.0",
    "@aws-sdk/lib-dynamodb": "^3.967.0",
    "@modelcontextprotocol/ext-apps": "^1.0.1",
    "@modelcontextprotocol/sdk": "^1.25.2",
    "express": "^5.2.1",
    "react": "^19.0.0",
    "react-dom": "^19.0.0",
    "zod": "^4.3.5"
  },
  "devDependencies": {
    "@types/aws-lambda": "^8.10.159",
    "@types/express": "^5.0.6",
    "@types/node": "^25.0.8",
    "@types/react": "^19.0.0",
    "@types/react-dom": "^19.0.0",
    "@vitejs/plugin-react": "^4.5.2",
    "cross-env": "^7.0.3",
    "esbuild": "^0.27.2",
    "typescript": "^5.9.3",
    "vite": "^6.3.5",
    "vite-plugin-singlefile": "^2.0.3"
  }
}
