{
  "name": "mcp-server-ts",
  "version": "1.0.0",
  "description": "Keep It Krispy MCP Server for Claude Desktop",
  "main": "dist/handler.js",
  "scripts": {
    "build": "tsc",
    "start": "node dist/handler.js",
    "dev": "tsc && node dist/handler.js",
    "bundle": "esbuild src/handler.ts --bundle --platform=node --target=node20 --outfile=dist/handler.js --external:@aws-sdk/*",
    "build:stdio": "esbuild src/stdio-server.ts --bundle --platform=node --target=node20 --outfile=dist/stdio-server.cjs --format=cjs",
    "stdio": "node dist/stdio-server.js",
    "local": "npx tsx src/local-server.ts"
  },
  "keywords": ["mcp", "krisp", "transcripts"],
  "author": "",
  "license": "ISC",
  "type": "module",
  "dependencies": {
    "@aws-sdk/client-bedrock-runtime": "^3.967.0",
    "@aws-sdk/client-dynamodb": "^3.967.0",
    "@aws-sdk/client-s3": "^3.967.0",
    "@aws-sdk/lib-dynamodb": "^3.967.0",
    "@modelcontextprotocol/sdk": "^1.25.2",
    "express": "^5.2.1",
    "zod": "^4.3.5"
  },
  "devDependencies": {
    "@types/aws-lambda": "^8.10.159",
    "@types/express": "^5.0.6",
    "@types/node": "^25.0.8",
    "esbuild": "^0.27.2",
    "typescript": "^5.9.3"
  }
}
